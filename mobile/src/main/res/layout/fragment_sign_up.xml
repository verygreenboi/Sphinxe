<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_vertical_margin"
    tools:context="ng.codehaven.demola.sphinx.ui.fragments.SignUpFragment"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <net.glassstones.library.ui.widget.EditTextViewDrawableView
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email address"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_email_grey"
            android:drawableLeft="@drawable/ic_email_grey"
            android:drawablePadding="8dp"
            app:compoundDrawableHeight="@dimen/small_logo_height"
            app:compoundDrawableWidth="@dimen/small_logo_width"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:scaleX="0"
        android:scaleY="0">

        <net.glassstones.library.ui.widget.EditTextViewDrawableView
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_lock_outline_grey"
            android:drawableLeft="@drawable/ic_lock_outline_grey"
            android:drawablePadding="8dp"
            app:compoundDrawableHeight="@dimen/small_logo_height"
            app:compoundDrawableWidth="@dimen/small_logo_width"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="0"
        android:scaleY="0">

        <ng.codehaven.demola.sphinx.ui.widgets.EditTextViewDrawableSize
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_lock_outline_grey"
            android:drawableLeft="@drawable/ic_lock_outline_grey"
            android:drawablePadding="8dp"
            app:compoundDrawableHeight="@dimen/small_logo_height"
            app:compoundDrawableWidth="@dimen/small_logo_width"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
